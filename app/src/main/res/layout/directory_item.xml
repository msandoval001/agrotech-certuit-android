<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/directoryPic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_person_black_24dp"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="3dp"
        app:civ_circle_background_color="@android:color/white"
        app:civ_fill_color="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/directoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/directoryPic"
        app:layout_constraintEnd_toStartOf="@+id/phoneIcon"
        app:layout_constraintStart_toEndOf="@id/directoryPic"
        app:layout_constraintTop_toTopOf="@+id/directoryPic" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/phoneIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/directoryPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/directoryPic"
        app:srcCompat="@drawable/ic_local_phone_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>